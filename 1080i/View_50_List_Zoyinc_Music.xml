<?xml version="1.0" encoding="UTF-8"?>
<!--
# 
# Custom Zoyinc version of View_50_List
# =====================================
# I have created a custom "include" file just for music 
# Yes this is probably the completely wrong way to do it, but this skin is designed
# for my requirements and creating a custom include seems the safest approach that is
# is least likely to impact other screens
#
-->
<includes>
	<include name="View_50_List_Zoyinc_Music">
		<param name="ListType">list</param>
		<definition>
			<control type="group">
				
				<include content="PVRBackground">
				    <param name="viewid">50</param>
				</include>

                <include condition="$EXP[ListPanelIsSwapped]" content="PVRBackground">
				    <param name="viewid">150</param>
				</include>				
				
				<include condition="Skin.HasSetting(ShowSetCount)">ListMovieSetDiscs</include>
				<include>ListTopDisc</include>
				<include>ListMusicDisc</include>
				
				<!--
				# This is the dark background/overlay that sits behind the Album/Track list
				# Disabling this as we don't want it
				# ZoyincTweak
				-->
				<include content="BackgroundOverlay">
					<param name="parentid" value="50"/>
					<param name="overlaytop" value="30"/>
					<param name="overlayheight" value="1500"/>
				    <param name="overlayleft" value="1065"/>
					<param name="overlaywidth" value="825"/>
				</include> 
				

				<visible>Control.IsVisible(50)</visible>
				<include>ContentFade</include>

				<!--
				# Panel showing current track's details incl name, artists, duration, etc. - ZoyincTweak
				#
				# This should only be visible when a track is selected
				# - It would be quite difficult to do in the album list, as it is hard to get the artwork folder 
				#   and we would also need to make the panel change between songs and albums
				#
				#   Additionally it kinda only makes sense when you are inside an album
				-->
				<control type="group">

					<visible>String.IsEqual(ListItem.DBType,song)</visible>
					<!--
					# Track info section incl track name, album name, artist - ZoyincTweak01
					# 
					-->
					<!-- # Track name - ZoyincTweak -->
					<control type="label">
						<posx>1090</posx>
						<posy>770</posy>
						<label>Track:</label>
						<textcolor>$VAR[HighlightColor]</textcolor>
					</control>
					<control type="label">
						<posx>1225</posx>
						<posy>770</posy>
						<label>$INFO[ListItem.title]</label>
						<textcolor>white</textcolor>
					</control>

					<!-- 
					# Album name - ZoyincTweak 
					-->
					<control type="label">
						<posx>1090</posx>
						<posy>815</posy>
						<label>Album:</label>
						<textcolor>$VAR[HighlightColor]</textcolor>
					</control>
					<control type="label">
						<posx>1225</posx>
						<posy>815</posy>
						<label>$INFO[ListItem.album]</label>
						<textcolor>white</textcolor>
					</control>

					<!-- 
					# Song artist - ZoyincTweak 
					-->
					<control type="label">
						<posx>1090</posx>
						<posy>860</posy>
						<label>Artists:</label>
						<textcolor>$VAR[HighlightColor]</textcolor>
					</control>
					<control type="label">
						<posx>1225</posx>
						<posy>860</posy>
						<label>$INFO[ListItem.artist]</label>
						<textcolor>white</textcolor>
					</control>

					<!-- 
					# Album year - ZoyincTweak 
					-->
					<control type="label">
						<posx>1090</posx>
						<posy>905</posy>
						<label>Year:</label>
						<textcolor>$VAR[HighlightColor]</textcolor>
					</control>
					<control type="label">
						<posx>1225</posx>
						<posy>905</posy>
						<label>$INFO[ListItem.year]</label> 
						<textcolor>white</textcolor>
					</control>

					<!--
					# Track duration - ZoyincTweak 
					-->
					<control type="label">
						<posx>1090</posx>
						<posy>950</posy>
						<label>Time:</label>
						<textcolor>$VAR[HighlightColor]</textcolor>
					</control>
					<control type="label">
						<posx>1225</posx>
						<posy>950</posy>
						<label>$INFO[ListItem.duration]</label> 
						<textcolor>white</textcolor>
					</control>
									
					<!-- 
					# Button to jump to CD artwork - ZoyincTweak 
					-->
					<control type="button" id="88000">
						<description>My first button control</description>
						<left>1080</left>
						<top>1010</top>
						<width>400</width>
						<height>50</height>
						<visible>true</visible>
						<textureradioonfocus colordiffuse="$VAR[FocusedTextColor]">icons/dots7.png</textureradioonfocus>
						<textureradioonnofocus>icons/dots7.png</textureradioonnofocus>
						<texturefocus border="4" colordiffuse="$VAR[HighlightColor]">img/WhiteRoundedST2.png</texturefocus>
						<texturenofocus border="4">img/WhiteRoundedT.png</texturenofocus>
						<label>View Album Artwork</label>
						<wrapmultiline>true</wrapmultiline>
						<onclick>ActivateWindow(Pictures,"$INFO[ListItem.path]stuff",return)</onclick>
						<focusedcolor>black</focusedcolor>
						<onfocus></onfocus>
						<onunfocus></onunfocus>
						<textoffsetx>10</textoffsetx>
						<onleft>9000</onleft>
						<onright>50</onright>
					</control>
				</control>


				<control type="$PARAM[ListType]" id="50">
